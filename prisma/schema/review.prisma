model Review {
    id        Int      @id @default(autoincrement())
    event     Event    @relation(fields: [eventId], references: [id])
    eventId   String
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    rating    Int      @db.SmallInt
    comment   String?
    createdAt DateTime @default(now())

    @@index([eventId])
    @@index([userId])
}
